{
  "name": "capella-os",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main/main.js",
  "author": {
    "name": "capella-os",
    "email": "kyawna2265@gmail.com",
    "url": "https://capella-os.vercel.app/"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build:win": "tsc -b && vite build && electron-builder --win",
    "build:mac": "tsc -b && vite build && electron-builder --mac",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron ."
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "electron-serve": "^2.1.1",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8"
  },
  "build": {
    "appId": "capella-os-electron",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon" : "public/capella-os-icon.png"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
